<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ViewLogActivity">

    <LinearLayout android:id="@+id/app_info_container"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:baselineAligned="true"
                  android:layout_alignParentLeft="true"
                  android:layout_toLeftOf="@+id/toggle_action"
                  android:paddingTop="2dip"
                  android:paddingBottom="2dip"
                  android:paddingLeft="5dip"
                  android:paddingRight="5dip">

        <ImageView android:id="@+id/app_info_icon"
                   android:layout_width="34dip"
                   android:layout_height="34dip" />

        <TextView android:id="@+id/app_info_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="5dip"
                  android:text="@string/app_name" />

    </LinearLayout>

    <TextView android:id="@+id/log_view_text"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:typeface="monospace"
              android:textSize="@dimen/log_font_size"
              android:maxLines="200"
              android:scrollbars="vertical"
              android:enabled="true"
              android:focusable="true"
              android:gravity="bottom"
              android:freezesText="true" />

</LinearLayout>
