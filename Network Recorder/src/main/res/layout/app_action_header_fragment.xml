<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="5dip"
              android:paddingRight="5dip"
              android:paddingTop="5dip"
              android:paddingBottom="5dip">

    <LinearLayout android:id="@+id/app_info_container"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:baselineAligned="true"
                  android:layout_alignParentLeft="true"
                  android:layout_toLeftOf="@+id/toggle_action"
                  android:paddingTop="2dip"
                  android:paddingBottom="2dip"
                  android:paddingLeft="5dip"
                  android:paddingRight="5dip">

        <ImageView android:id="@+id/app_info_icon"
                   android:layout_width="34dip"
                   android:layout_height="34dip" />

        <TextView android:id="@+id/app_info_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="5dip"
                  android:text="@string/app_name" />

    </LinearLayout>

    <ToggleButton android:id="@+id/toggle_action"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:textOn="@android:string/yes"
                  android:textOff="@android:string/no" />

</RelativeLayout>